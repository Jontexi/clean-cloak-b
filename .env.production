# Production Environment Variables
# ========================================
# SERVER CONFIGURATION
PORT=5000
NODE_ENV=production

# MONGODB CONNECTION (REPLACE WITH YOUR MONGODB ATLAS URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/clean-cloak?retryWrites=true&w=majority

# JWT CONFIGURATION (REPLACE WITH SECURE RANDOM STRING)
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production-min-32-chars
JWT_EXPIRE=7d

# CORS CONFIGURATION (REPLACE WITH YOUR DEPLOYED FRONTEND URL)
ALLOWED_ORIGINS=https://your-frontend-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# BACKEND URL (REPLACE WITH YOUR RENDER URL)
BACKEND_URL=https://your-backend-url.onrender.com

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# INTASEND PAYMENT GATEWAY (PRODUCTION)
# ========================================
# REPLACE WITH YOUR LIVE INTASEND KEYS
INTASEND_PUBLISHABLE_KEY=ISPubKey_live_your-publishable-key
INTASEND_SECRET_KEY=ISSecretKey_live_your-secret-key
INTASEND_WEBHOOK_SECRET=your-intasend-webhook-secret
INTASEND_ENVIRONMENT=live

# ========================================
# M-PESA CONFIGURATION (OPTIONAL - FOR FUTURE USE)
# ========================================
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-business-shortcode
MPESA_PASSKEY=your-passkey
MPESA_CALLBACK_URL=https://your-backend-url.onrender.com/api/payments/mpesa/callback
